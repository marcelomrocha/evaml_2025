        <talk>Yes! It is correct!</talk>
        <light state="ON" color="GREEN"/>
        <stop />
      </case>
      <default>
        <talk>Oh n√£o!</talk>
        <light state="ON" color="RED"/>
      </default>  
    </switch>
    <loop times="2">
